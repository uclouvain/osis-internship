<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="learning_unit_year_tree_view" model="ir.ui.view">
      <field name="name">learning_unit_year.tree.view</field>
      <field name="model">osis.learning_unit_year</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="acronym"/>
          <field name="title"/>
          <field name="academic_year_id"/>
          <field name="learning_unit_id"/>
          <field name="credits"/>
        </tree>
      </field>

    </record>
    <!-- Form -->
    <record id="learning_unit_year_form" model="ir.ui.view">
      <field name="name">osis.view.learning_unit_year.form</field>
      <field name="model">osis.learning_unit_year</field>

      <field name="arch" type="xml">
        <form string="Learning Unit Year Form">
          <group col="4">
            <field name="acronym"/>
            <field name="title"/>
            <field name="academic_year_id"/>
            <field name="learning_unit_id"/>
            <field name="credits"/>
              </group>
            <group col="4">
            <field name="learning_unit_enrollment_ids"  attrs="{'readonly':True}"/>

          </group>
        </form>
      </field>
    </record>

  </data>
</openerp>
