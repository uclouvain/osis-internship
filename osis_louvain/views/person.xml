<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Tree -->
    <record id="person_tree_view" model="ir.ui.view">
      <field name="name">person.tree</field>
      <field name="model">osis.person</field>
      <field eval="16" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Name"/>
          <field name="global_id" string="Global ID"/>
          <field name="birthdate" string="Birthdate"/>
          <field name="email" string="Email"/>
        </tree>
      </field>
    </record>
    <!-- Form -->
    <record id="osis_person_form" model="ir.ui.view">
      <field name="name">osis.view.person.form</field>
      <field name="model">osis.person</field>
      <field name="mode">primary</field>
      <field eval="16" name="priority"/>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='name']" position="after">


          </xpath>
          <xpath expr="//div[@class='oe_edit_only']" position="attributes">
            <attribute name="invisible">True</attribute>
          </xpath>
        <xpath expr="//label[@for='name']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//div[@name='buttons']" position="after">
          <group col="4">
             <field name="last_name" string="Last name"/>

             <field name="first_name" string="First name"/>
             <field name="middle_name" string="Middle name"/>
           </group>
          <group>
          <field name="global_id" string="Global ID"/>
        </group>
        </xpath>
        <xpath expr="//field[@name='image']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='is_company']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//label[@for='is_company']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='parent_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='category_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='state_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='function']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='phone']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='fax']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='website']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='title']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//notebook" position="before">
          <group col="4">
            <field name="gender" string="Gender"/>
            <field name="national_number" string="National number"/>
          </group>
        </xpath>
        <xpath expr="//notebook/page[@string='Contacts']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//notebook/page[@name='internal_notes']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//notebook/page[@name='sales_purchases']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>


      </field>
    </record>

  </data>
</openerp>
